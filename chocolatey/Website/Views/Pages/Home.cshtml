    <script type="text/javascript" src="@Url.Content("~/Scripts/ZeroClipboard.js")"></script>
    <script type="text/javascript">

        $(document).ready(function() {
            ZeroClipboard.setMoviePath('@Url.Content("~/Scripts/ZeroClipboard.swf")');
            var clip = new ZeroClipboard.Client();
            clip.setText('@@powershell -NoProfile -ExecutionPolicy unrestricted -Command "iex ((new-object net.webclient).DownloadString(\'https://chocolatey.org/install.ps1\'))" && SET PATH=%PATH%;%systemdrive%\\chocolatey\\bin');
            clip.setHandCursor(true);
            clip.glue('copyButton');

            $(window).resize(function() {
                clip.reposition();
            });
        });
    </script>

